<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.integrasalud">
    <!-- Permisos para Internet -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.IntegraSalud"
        tools:targetApi="31">
        <activity
            android:name=".MensajeActivity"
            android:exported="false" />

        <service
            android:name=".MessageService"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="com.google.android.gms.wearable.MESSAGE_RECEIVED" />

                <data
                    android:host="*"
                    android:pathPrefix="/my_path"
                    android:scheme="wear" />
            </intent-filter>
        </service>

        <activity
            android:name=".MainActivity2"
            android:exported="false" />
        <activity
            android:name=".LoginPaciente"
            android:exported="false" />
        <activity
            android:name=".RegistroActivity"
            android:exported="false"
            android:label="Registro" />
        <activity
            android:name=".EditarPacienteActivity"
            android:exported="false"
            android:label="Editar Paciente" />
        <activity
            android:name=".AgregarPacienteActivity"
            android:exported="false"
            android:label="Agregar Paciente" />
        <activity
            android:name=".PacienteActivity"
            android:exported="false" />
        <activity
            android:name=".UserActivity"
            android:exported="false" />
        <activity
            android:name=".SignUpActivity"
            android:exported="false" />
        <activity
            android:name=".LoginActivity"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>